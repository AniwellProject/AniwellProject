<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.RSW.repository.MedicalDocumentRepository">


    <!-- 공통 컬럼 매핑 -->
    <resultMap id="MedicalDocumentMap" type="com.example.RSW.repository.MedicalDocumentRepository">
        <id     property="id"        column="id"/>
        <result property="visitId"   column="visit_id"/>
        <result property="docType"   column="doc_type"/>
        <result property="fileUrl"   column="file_url"/>
        <result property="ocrJson"   column="ocr_json"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <!-- INSERT -->
    <insert id="insertDocument" parameterType="com.example.RSW.repository.MedicalDocumentRepository"
            useGeneratedKeys="true" keyProperty="id">
        INSERT INTO medical_document
            (visit_id, doc_type, file_url, ocr_json)
        VALUES
            (#{visitId}, #{docType}, #{fileUrl}, #{ocrJson})
    </insert>

    <!-- UPDATE (부분 수정 지원) -->
    <update id="updateDocument" parameterType="com.example.RSW.repository.MedicalDocumentRepository">
        UPDATE medical_document
        <set>
            <if test="visitId != null">visit_id = #{visitId},</if>
            <if test="docType != null and docType != ''">doc_type = #{docType},</if>
            <if test="fileUrl != null and fileUrl != ''">file_url = #{fileUrl},</if>
            <if test="ocrJson != null">ocr_json = #{ocrJson},</if>
        </set>
        WHERE id = #{id}
    </update>

    <!-- DELETE -->
    <delete id="deleteDocument" parameterType="int">
        DELETE FROM medical_document WHERE id = #{id}
    </delete>

    <!-- SELECT 단건 -->
    <select id="selectById" parameterType="int" resultMap="MedicalDocumentMap">
        SELECT id, visit_id, doc_type, file_url, ocr_json, created_at
        FROM medical_document
        WHERE id = #{id}
    </select>

    <!-- SELECT: visitId로 -->
    <select id="selectByVisitId" parameterType="int" resultMap="MedicalDocumentMap">
        SELECT id, visit_id, doc_type, file_url, ocr_json, created_at
        FROM medical_document
        WHERE visit_id = #{visitId}
        ORDER BY created_at DESC
    </select>

    <!-- SELECT: petId로 (visit 조인) -->
    <select id="selectByPetId" parameterType="int" resultMap="MedicalDocumentMap">
        SELECT md.id, md.visit_id, md.doc_type, md.file_url, md.ocr_json, md.created_at
        FROM medical_document md
                 JOIN visit v ON v.id = md.visit_id
        WHERE v.pet_id = #{petId}
        ORDER BY v.visit_date DESC, md.created_at DESC
    </select>

</mapper>